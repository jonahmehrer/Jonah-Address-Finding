require "csv"

module MergeCsv
  def self.run(csv_1_path, csv_2_path)
    csv_1 = CSV.read(csv_1_path, headers: true)
    csv_2 = CSV.read(csv_2_path, headers: true)
    puts merge(csv_1, csv_2)
end
