last_name.capitalize!
puts "Your last name is #{last_name}!"

print "What city do you live in?"
city = gets.chomp
city2 = city.capitalize
city.capitalize!
puts "You live in #{city}!"

print "What state do you live in?"
state = gets.chomp
state2 = state.upcase
state.upcase!
puts "You live in #{state}!"

